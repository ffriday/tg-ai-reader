# Telegram API credentials (get from https://my.telegram.org/apps)
TG_API_ID=
TG_API_HASH=

# Telegram session string (will be automatically generated on first run)
TG_SESSION_STRING=

# Name of the Telegram chat folder to monitor for new messages
TG_CHAT_FOLDER=tgAiRead

# Name of the target channel where interesting messages will be forwarded
TG_TARGET_CHANNEL=aiNews

# Google Gemini AI API key (get from https://aistudio.google.com/app/apikey)
AI_KEY=

# Minimum interval between AI API requests in milliseconds (default: 1000)
AI_REQUEST_INTERVAL=1000

# Timeout between processing dialogs in milliseconds (default: 1000)
TIMEOUT=1000

# Interest threshold for messages from 0 to 1 (default: 0.5)
# Messages with AI score >= this value will be forwarded
POST_INTEREST_THRESHOLD=0.5

# Path to prompts configuration file (default: ./src/config/prompts.json)
PROMPTS_FILE_PATH=./src/config/prompts.json